<h1>Listing articles</h1>
 
<table border="1">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Detail', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td>
        <%= link_to 'Delete Article', article_path(article), method: :delete, data: { confirm: 'Chắc không?' } %>
      </td>
    </tr>
  <% end %>
</table>
<p><%= link_to "Home", welcome_index_path %></p>